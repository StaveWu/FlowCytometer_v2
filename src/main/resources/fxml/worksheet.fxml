<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import application.worksheet.LinkedChartsPane?>
<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ToolBar>
        <items>
             <Button fx:id="scatterBtn" mnemonicParsing="false" onAction="#createScatterChart" text="散点图">
                 <tooltip>
                     <Tooltip text="散点图" />
                 </tooltip>
             </Button>
             <Button fx:id="histBtn" mnemonicParsing="false" text="直方图">
                 <tooltip>
                     <Tooltip text="直方图" />
                 </tooltip>
             </Button>
             <Button fx:id="heatmapBtn" mnemonicParsing="false" text="密度图">
                 <tooltip>
                     <Tooltip text="热图" />
                 </tooltip>
             </Button>
            <Separator orientation="VERTICAL" />
            <Button fx:id="rectBtn" mnemonicParsing="false" onAction="#gateRectangle" text="矩形圈门">
                <tooltip>
                    <Tooltip text="矩形圈门" />
                </tooltip>
            </Button>
            <Button fx:id="polygonBtn" mnemonicParsing="false" text="多边形圈门">
                <tooltip>
                    <Tooltip text="多边形圈门" />
                </tooltip>
            </Button>
            <Separator orientation="VERTICAL" />
             <Button fx:id="saveBtn" mnemonicParsing="false" text="保存">
                 <tooltip>
                     <Tooltip text="保存" />
                 </tooltip>
             </Button>
             <Button fx:id="deleteBtn" mnemonicParsing="false" text="删除">
                 <tooltip>
                     <Tooltip text="删除" />
                 </tooltip>
             </Button>
            <Button mnemonicParsing="false" onAction="#connect" text="连接" />
        </items>
      </ToolBar>
      <ScrollPane prefHeight="200.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
        <content>
          <LinkedChartsPane fx:id="chartsPane" minHeight="0.0" minWidth="0.0" prefHeight="2000.0" prefWidth="1500.0" />
        </content>
      </ScrollPane>
   </children>
    <stylesheets>
        <URL value="@worksheet.css" />
    </stylesheets>
</fx:root>
