<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<fx:root type="javafx.scene.layout.VBox" fillWidth="true" prefWidth="248" prefHeight="600" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <FlowPane>
            <Button fx:id="btnNewFile" mnemonicParsing="false" onMouseClicked="#newFile" text="NewFile">
                <tooltip>
                    <Tooltip text="New file"></Tooltip>
                </tooltip>
            </Button>
            <Button fx:id="btnNewFolder" mnemonicParsing="false" text="NewFolder" onMouseClicked="#newFolder">
                <tooltip>
                    <Tooltip text="New folder"></Tooltip>
                </tooltip>
            </Button>
            <Button fx:id="btnRemove" mnemonicParsing="false" text="Remove" onMouseClicked="#remove">
                <tooltip>
                    <Tooltip text="Delete"></Tooltip>
                </tooltip>
            </Button>
            <Button fx:id="btnRename" mnemonicParsing="false" text="Rename" onMouseClicked="#rename">
                <tooltip>
                    <Tooltip text="Rename"></Tooltip>
                </tooltip>
            </Button>
        </FlowPane>
        <TreeView fx:id="treeView" VBox.vgrow="ALWAYS" />
    </children>
    <stylesheets>
        <URL value="@project_tree.css"></URL>
    </stylesheets>
</fx:root>
